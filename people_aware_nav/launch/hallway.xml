<!-- Launches the hallway movement nodes for the robot.  -->

<launch>
  <master auto="start"/>
  <group>

    <param name="/global_frame_id" value="/map"/>

    <!-- The navigation stack and associated parameters -->
    <include file="$(find people_aware_nav)/launch/nav_robot.xml" />

    <include file="$(find hallway_tracker)/launch/hallway_tracker.launch" /> 
    <include file="$(find people)/face_detector.wide.launch" /> 

    <!-- <node pkg="pr2_controller_manager" type="spawner" args="$(find people_aware_nav)/launch/head_controller.xml" />-->

  </group>
</launch>
